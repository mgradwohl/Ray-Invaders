{
    "tasks": [
        {   
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file (Debug)",
            "command": "cl.exe",
                "args": [
                "/std:c++20",
                "/Zi",
                "/EHsc",
                "/W4",
                "/utf-8",
                "/MP",
                "/nologo",
                "/Od",
                "/I", "${workspaceFolder}",
                "/I", "c:\\raylib\\include",
                "${workspaceFolder}\\Main.cpp",
                "${workspaceFolder}\\RLWindow.cpp",
                "${workspaceFolder}\\RLDrawSession.cpp",
                "${workspaceFolder}\\RLWaveSound.cpp",
                "${workspaceFolder}\\Animation.cpp",
                "${workspaceFolder}\\Backbuffer.cpp",
                "${workspaceFolder}\\Background.cpp",
                "${workspaceFolder}\\Base.cpp",
                "${workspaceFolder}\\Bases.cpp",
                "${workspaceFolder}\\Bullet.cpp",
                "${workspaceFolder}\\Enemy.cpp",
                "${workspaceFolder}\\EnemyManager.cpp",
                "${workspaceFolder}\\Ufo.cpp",
                "${workspaceFolder}\\Player.cpp",
                "${workspaceFolder}\\PowerUpItem.cpp",
                "${workspaceFolder}\\PowerUpManager.cpp",
                "/Fe${workspaceFolder}\\bin\\Debug\\Ray-Invaders.exe",
                "/Fo${workspaceFolder}\\bin\\Debug\\",
                "/Fd${workspaceFolder}\\bin\\Debug\\",
                "/link",
                "/DEBUG",
                "/MACHINE:X64",
                "/LIBPATH:c:\\raylib\\lib",
                "/NODEFAULTLIB:libucrt.lib",
                "/NODEFAULTLIB:MSVCRT",
                "raylib.lib",
                "ucrt.lib",
                "winmm.lib",
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "shell32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Ray-Invaders project with MSVC (Debug)"
        },
