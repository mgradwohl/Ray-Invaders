BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never
ColumnLimit: 0
AllowShortIfStatementsOnASingleLine: false
BreakBeforeBraces: Allman
SortIncludes: true
ReflowComments: true
SpacesInParentheses: false
SpaceAfterCStyleCast: true
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
# Explicit Allman brace control for fine-grained consistency
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  AfterCaseLabel: true
  IndentBraces: false